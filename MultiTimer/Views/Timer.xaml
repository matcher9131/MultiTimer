<UserControl
    x:Class="MultiTimer.Views.Timer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:MultiTimer.ViewModels" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=vm:TimerViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
>
    <Grid Height="75" Width="375">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Text="{Binding Remain, Converter={StaticResource TimeSpanConverter}}"
            HorizontalAlignment="Right"
        />
    </Grid>
</UserControl>
